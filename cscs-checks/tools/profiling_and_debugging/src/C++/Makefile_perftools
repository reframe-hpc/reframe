LD = $(CXX)

OBJ            = _jacobi.o _main.o 
OBJ2 	       = $(subst _,$(PE_ENV)_,$(OBJ))
LIB            = 

.SUFFIXES: .o .cc

%.o: %.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $(PE_ENV)$@

perftools_check: $(OBJ)
	$(LD) $(LDFLAGS) $(OBJ2) $(LIB) -o $@

clean:
	rm -f *.o o_* *.mod perftools_check_cc
	rm -fr *.ptx *.opt *.cg *.ap2 *.rpt *.cub *.lst *.xf
